@inherits LayoutComponentBase
@using Hajir.Crm.Blazor.XrmFrames;
@using MudBlazor;
<MudRTLProvider RightToLeft="true">
    <MudThemeProvider Theme="MyCustomTheme" />
    <MudPopoverProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <div class="page">
        @if (IsNotXrmFrame)
        {
            <div class="sidebar">
                <NavMenu />
            </div>
            
        }
        <div class="main">
            @if (IsNotXrmFrame)
            {
                <div class="top-row px-4">

                <Hajir.Crm.Blazor.Components.UserAccount.UserAccountComponent />
            </div>
            }
            <ErrorComponent />
            <div class="content px-4 background">
                @Body
            </div>
        </div>
    </div>
</MudRTLProvider>
