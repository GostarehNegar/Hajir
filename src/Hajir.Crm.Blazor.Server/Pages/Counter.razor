@page "/counter"
@using MudBlazor;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<MudButton Variant="Variant.Filled" Color="Color.Tertiary" class="btn btn-primary" @onclick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
