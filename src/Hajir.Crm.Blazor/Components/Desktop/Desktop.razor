<h3>Desktop</h3>
@inherits BaseComponent

<MudTextField @bind-Value="this.Search" DebounceInterval="500" OnDebounceIntervalElapsed="HandleIntervalElapsed" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>

<MudGrid>
    @for (int i = 0; i < Matrix.GetLength(0); i++)
    {
        @for (int j = 0; j < Matrix.GetLength(1); j++)
        {
            <MudItem xs="12">
                @Matrix[i,j].Name
            </MudItem>
        }
    }
</MudGrid>
