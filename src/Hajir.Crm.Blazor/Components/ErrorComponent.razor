@using Hajir.Crm.Blazor.ViewModels;
@inherits BaseComponent<ErrorModel>
@using MudBlazor
@inject ISnackbar Snackbar

@if (this.State.Value.HasError) { ShowErrorSnackbar(); }


@code {

    public async Task Close()
    {
        this.State.SetState(x => x.Clear());
        await Task.CompletedTask;
    }

    private void ShowErrorSnackbar()
    {
        Snackbar.Add(this.Value?.Error?.Message,Severity.Error) ;
    }

}
