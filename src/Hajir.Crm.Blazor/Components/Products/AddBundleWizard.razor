@inherits BaseComponent<AddBundleWizardState>

<MudDialog>

    <TitleContent>
        <MudGrid>
            <MudItem xs="8" Class="pa-1" >
                <MudIconButton Icon="@Icons.Material.Filled.ArrowRight" OnClick="PrevStep" Class="pa-1"></MudIconButton>
                <span>@Step </span> <span></span> @State.Value.StepName
                <MudIconButton Icon="@Icons.Material.Filled.ArrowLeft" OnClick="NextStep" Class="pa-1"></MudIconButton>
            </MudItem>
            <MudItem xs="12" Class="pa-1" style="direction:rtl">
                <MudPaper>
                    <MudAlert Severity="Severity.Normal" Variant="Variant.Filled" NoIcon="true" Class="my-0">@State.Value.Bundle.Name</MudAlert>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </TitleContent>
    <DialogContent>
        @switch (this.Step)
        {
            case 4:
                <AddBundleWizardSNMPStep />
                break;
            case 3:
                <AddBundleWizardCabinetStep State="State" />
                break;
            case 2:
                <AddBundleWizardBatteryStep State="State" />
                break;

            default:
                <AddBundleWizardUPSStep State="@State" />
                @*<SelectProduct OnSelected="@SelectP" ProductTypes="HajirCrmConstants.Schema.Product.ProductTypes.Battery" />*@
                break;
        }

    </DialogContent>
    <DialogActions>
        <div class="actions-container">
            <MudButton Variant="Variant.Filled" OnClick="AddAsBundle">افزودن به صورت باندل</MudButton>
            <MudButton Color="Color.Error" >Cancel</MudButton>
        </div>
    </DialogActions>

</MudDialog>
